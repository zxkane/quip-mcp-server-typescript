{
  "app": "npx ts-node -P tsconfig.json --prefer-ts-exts bin/app.ts",
  "output": "cdk.out",
  "build": "npm run build",
  "watch": {
    "include": [
      "bin/**/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules"
    ]
  }
}